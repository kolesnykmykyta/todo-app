@model IEnumerable<TaskModel>

<div class="w-50 text-center m-4">
    @if (Model != null && Model.Count() != 0)
    {
        @foreach (TaskModel t in Model)
        {
            <div class="d-flex justify-content-between border-bottom pb-1 mb-2">
                <div class="d-flex justify-content-center align-items-center">
                    @t.Name
                </div>
                <div class="d-flex">
                    <button class="btn btn-success">Mark as done</button>
                    <button class="btn btn-primary">Details</button>
                </div>
            </div>
        }
    }
    else
    {
        <p>There is no tasks yet.</p>
    }
    <button class="btn btn-primary w-100">Add new</button>
</div>