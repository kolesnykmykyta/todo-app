@model (TaskModel Task, string SubmitAction, string Header)

@{
    TaskModel task = Model.Task;
}

<h2>@Model.Header a task</h2>
<form asp-action="@Model.SubmitAction" asp-controller="Home" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="@task.Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="@task.Name" class="control-label"></label>
        <input asp-for="@task.Name" class="form-control" />
        <span asp-validation-for="@task.Name" class="text-danger"></span>
    </div>
    <div class="mt-2 d-flex flex-row-reverse gap-2">
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
    </div>
</form>